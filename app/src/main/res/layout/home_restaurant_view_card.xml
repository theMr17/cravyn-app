<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/restaurant_image_sample"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/restaurant_sample_image"
            android:layout_margin="20dp"
            android:foreground="@drawable/restaurant_banner_background_gradient"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/favourite_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/restaurant_image_sample"
            app:layout_constraintEnd_toEndOf="@id/restaurant_image_sample"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="1.0"/>

    <TextView
        android:id="@+id/restaurant_offer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20% OFF"
        android:fontFamily="@font/nunito_black"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toTopOf="@+id/max_offer"
        app:layout_constraintStart_toStartOf="@+id/restaurant_image_sample" />

    <TextView
        android:id="@+id/max_offer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/nunito"
        android:text="max discount"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/restaurant_image_sample"
        app:layout_constraintStart_toStartOf="@+id/restaurant_image_sample" />

    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/restaurant_image_sample"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/best_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/best_in_icon" />

            <TextView
                android:id="@+id/best_in_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/nunito"
                android:text="Best in item" />

        </LinearLayout>

        <TextView
            android:id="@+id/restaurant_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_black"
            android:text="Rstaurant Name"
            android:textColor="@color/header_text_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_bold"
                android:text="rating"
                android:textColor="@color/header_text_color" />

            <TextView
                android:id="@+id/delivery_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/nunito_bold"
                android:text=".delivery_time"
                android:textColor="@color/header_text_color" />
        </LinearLayout>

        <TextView
            android:id="@+id/restaurant_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/nunito"
            android:text="Restaurant address" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

