<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <style name="OutlinedTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/text_input_layout_margin_top</item>
        <item name="android:layout_marginStart">@dimen/shared_horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/shared_horizontal_margin</item>
        <item name="android:fontFamily">@font/nunito</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_marginStart">@dimen/shared_horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/shared_horizontal_margin</item>
        <item name="android:fontFamily">@font/nunito_extrabold</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>
